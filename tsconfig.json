{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ES2023",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "strict": true,
    "jsx": "react-jsx",
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "ignoreDeprecations": "5.0",
    "outDir": "./dist"
  },
  "files": [
    "types/passport.ts"
  ],
  "include": [
    "types/passport.ts", // Explicitly list the file path
    "app.ts",
    "auth.ts",
    "prisma.config.ts",
    "lib/**/*.ts",
    "routes/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "client",
    "dist",
    "**/*.js",
    "app.d.ts",
    "auth.d.ts",
    "prisma.config.d.ts",
    "routes/*.d.ts"
  ]
}